# Copy this to terraform.tfvars and fill in your values.
# terraform.tfvars is gitignored — never commit real OCIDs.

tenancy_ocid        = "ocid1.tenancy.oc1..xxxxxxxxxxxx"
user_ocid           = "ocid1.user.oc1..xxxxxxxxxxxx"
api_key_fingerprint = "aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99"
api_key_path        = "~/.oci/oci_api_key.pem"
region              = "uk-london-1"
compartment_ocid    = "ocid1.compartment.oc1..xxxxxxxxxxxx"

# Compute — Oracle free tier E5 Flex
instance_shape     = "VM.Standard.E5.Flex"
instance_ocpus     = 1
instance_memory_gb = 12

# SSH
ssh_public_key_path = "~/.ssh/sacut-cv-web-ssh.pub"
